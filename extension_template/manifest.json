{
"manifest_version": 2,
    "name": "ShopAltruism",
    "description": "Converts online prices to impactful spending metrics for the everyday philanthropist",
    "version": "1.0",
    "icons": { "16": "images/growth16.png",
          "128": "images/growth128.png" },
    "browser_action": {
        "default_icon": {"16": "images/growth16.png"},        // toolbar icon
        "default_title": "POTI",                            // hover text
        "default_popup": "ui.html"                          // menu design
    },

    "permissions": [                                        // stores data about the currency
        "storage"
    ],

    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },

    "content_scripts": [
        {   // Loads price changes and content
            "matches": [
                "*://*/*"
            ],
            "all_frames": true,
            "js": [
                "jquery-3.3.1.min.js", "content.js"
            ],
            "run_at": "document_idle"
        },
        {   // Descriptive data visualization/hyperlinkes
            "matches": [
                "*://*/*"
            ],
            "js": [
                "display_report.js"
            ],
            "run_at": "document_idle"

        }
      ]
}
