{
    "manifest_version": 2,
    "name": "[your extension name here]",
    "description": "[your extension description here]",
    "version": "1.0",
    "browser_action": {
        "default_icon": {"16": "images/icon16.png"},       // optional
        "default_title": "POTI",      // optional; shown in tooltip
        "default_popup": "ui.html"        // optional
    },

    "permissions": [
        "storage"
    ],
    "content_scripts": [
    {
        "matches": [
            "*://*/*"
        ],
        "all_frames": true,
        "js": [
            "content.js"
        ],
        "run_at": "document_idle"
    }
    ]
}
